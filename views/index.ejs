<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="css/main.css">
</head>
<body>
  <header>
    <a href="/">
      <h1 id="logo">xPatriate</h1>
    </a>
  </header>
   
  <main>
    <nav>
      <button>Search for Country</button>
      <button>Filter by Region</button>
    </nav>

    <!-- <section id="searchform" class="form"> -->
      <form id="newsearch" class="form" method="post" action="/searchspecific">
          <input id="searchbar" type="text" name ="search" placeholder="Search for a Specific Country"/>
          <button>Search</button>
      </form>
    <!-- </section> -->

    <!-- <section class="form"> -->
      <form id="regionform" class="form" method="" action="">
        <label for="region">Region</label>
        <select id="region">
          <option class="default" value="default">Select Region</option>
          <option class="africa" value="africa">Africa</option>
          <option class="americas" value="americas">Americas</option>
          <option class="asia" value="asia">Asia</option>
          <option class="europe" value="europe">Europe</option>
          <option class="oceania" value="oceania">Oceania</option>
        </select>
        <label for="subregion">Subregion</label>

        <select id="subregion-dummy">
          <option value="dummy"></option>
        </select>

        <select id="subregion-africa" class="subregion">
          <option class="default" value="default">Select Subregion</option>
          <option value="eastern africa">Eastern Africa</option>
          <option value="middle africa">Middle Africa</option>
          <option value="northern africa">Northern Africa</option>
          <option value="southern africa">Southern Africa</option>
          <option value="western africa">Western Africa</option>
        </select>

        <select id="subregion-americas" class="subregion">
          <option class="default" value="default">Select Subregion</option>
          <option value="central america">Central America</option>
          <option value="northern america">Northern America</option>
          <option value="caribbean">Caribbean</option>
          <option value="south america">South America</option>
        </select>

        <select id="subregion-asia" class="subregion">
          <option class="default" value="default">Select Subregion</option>
          <option value="central asia">Central Asia</option>
          <option value="eastern asia">Eastern Asia</option>
          <option value="south-eastern asia">South-Eastern Asia</option>
          <option value="southern asia">Southern Asia</option>
          <option value="western asia">Western Asia</option>
        </select>

        <select id="subregion-europe" class="subregion">
          <option class="default" value="default">Select Subregion</option>
          <option value="eastern europe">Eastern Europe</option>
          <option value="northern europe">Northern Europe</option>
          <option value="southern europe">Southern Europe</option>
          <option value="western europe">Western Europe</option>
        </select>

        <select id="subregion-oceania" class="subregion">
          <option class="default" value="default">Select Subregion</option>
          <option value="australia and new zealand">Australia and New Zealand</option>
          <option value="melanesia">Melanesia</option>
          <option value="micronesia">Micronesia</option>
          <option value="polynesia">Polynesia</option>
        </select>

        <label for="language">Language</label>
        <select id="language">
          <option value="arabic">Arabic</option>
        </select>
        <button>Search</button>
      </form>
    <!-- </section> -->






    <section id="savedlist">
      <h1>Your Saved Countries</h1>
      <!-- <ul id="temp"> -->
        <section>
          <% countries.forEach(country => { %>
            <form action="/details" method="post">
              <input type="hidden" name="name" value="<%- country.name %>">
              <input type="hidden" name="language" value="<%- country.language %>">
              <input type="hidden" name="region" value="<%- country.region %>">
              <input type="hidden" name="subregion" value="<%- country.subregion %>">
              <input type="hidden" name="capital" value="<%- country.capital %>">
              <input type="hidden" name="currency" value="<%- country.currency %>">
              <input type="hidden" name="flag_url" value="<%- country.flag_url %>">
              <input type="hidden" name="currency_symbol" value="<%- country.currency_symbol %>">
              <button type="submit" class="countrybutton">
                <img class="flagimg" src="<%- country.flag_url %>"/>
                <p class="countryname">
                  <%- country.name %>
                </p>
              </button>
            </form>
          <% }) %>
        </section>
      <!-- </ul> -->
    </section>

  </main>

  <footer>
    <p>&copy; 2020 Sue Duclos, Clayton Jones, Cas Olejniczak, Eyob Tamir</p>
    <a href="/about" id="aboutlink">About Our Team</a>
  </footer>
  <script src="http://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="js/app.js"></script>
</body>
</html>